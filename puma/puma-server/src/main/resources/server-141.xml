<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

    <bean id="server-141" class="com.dianping.puma.server.ReplicationBasedServer"
        parent="notifiableBean">
        <property name="host" value="10.0.18.141" />
        <property name="port" value="3306" />
        <property name="user" value="root" />
        <property name="password" value="" />
        <property name="defaultBinlogFileName" value="mysql-bin.000001" />
        <property name="defaultBinlogPosition" value="106" />
        <property name="parser" ref="defaultParser-141" />
        <property name="serverId" value="8885" />
        <property name="dataHandler" ref="datahandler-141" />
        <property name="dispatcher" ref="dispatcher-141" />
        <property name="binlogPositionHolder" ref="binlogPositionHolder" />
        <property name="dbServerId" value="1"/>
        <property name="name" value="141" />
    </bean>

    <bean id="dispatcher-141"
        class="com.dianping.puma.sender.dispatcher.SimpleDispatherImpl"
        init-method="start">
        <property name="name" value="dispatcher-141" />
        <property name="senders">
            <list>
                <ref bean="fileSender-141" />
            </list>
        </property>
    </bean>

    <bean id="defaultParser-141" class="com.dianping.puma.parser.DefaultBinlogParser"
        init-method="start" />

    <bean id="datahandler-141" class="com.dianping.puma.datahandler.DefaultDataHandler"
        init-method="start" parent="notifiableBean">
        <property name="tableMetasInfoFetcher" ref="tableMetasInfoFetcher-141" />
    </bean>

    <bean id="archiveStrategy-141" class="com.dianping.puma.storage.DefaultArchiveStrategy">
        <property name="maxMasterFileCount" value="10" />
        <property name="serverName" value="141" />
    </bean>

    <bean id="cleanupStrategy-141" class="com.dianping.puma.storage.DefaultCleanupStrategy">
        <property name="preservedDay" value="2" />
    </bean>

    <bean id="tableMetasInfoFetcher-141"
        class="com.dianping.puma.datahandler.DefaultTableMetaInfoFetcher">
        <property name="metaDBHost" value="10.0.18.141" />
        <property name="metaDBPort" value="3306" />
        <property name="metaDBUser" value="root" />
        <property name="metaDBPassword" value="" />
    </bean>

    <bean id="fileSender-141" class="com.dianping.puma.sender.FileDumpSender"
        init-method="start" parent="notifiableBean">
        <property name="name" value="fileDumpSender-141" />
        <property name="storage" ref="storage-141" />
    </bean>

    <bean id="storage-141" class="com.dianping.puma.storage.DefaultEventStorage"
        init-method="start">
        <property name="codec" ref="jsonCodec" />
        <property name="masterBucketIndex" ref="masterBucketIndex-141" />
        <property name="slaveBucketIndex" ref="slaveBucketIndex-141" />
        <property name="archiveStrategy" ref="archiveStrategy-141" />
        <property name="cleanupStrategy" ref="cleanupStrategy-141" />
        <property name="name" value="storage-141" />
        <property name="binlogIndexBaseDir"
            value="/data/appdatas/puma/binlogIndex/141/" />
    </bean>

    <bean id="masterBucketIndex-141" class="com.dianping.puma.storage.LocalFileBucketIndex"
        init-method="start">
        <property name="bucketFilePrefix" value="bucket-" />
        <property name="maxBucketLengthMB" value="1000" />
        <property name="baseDir" value="/data/appdatas/puma/storage/141/master/" />
    </bean>
    <bean id="slaveBucketIndex-141" class="com.dianping.puma.storage.LocalFileBucketIndex"
        init-method="start">
        <property name="bucketFilePrefix" value="bucket-" />
        <property name="maxBucketLengthMB" value="500" />
        <property name="baseDir" value="/data/appdatas/puma/storage/141/slave/" />
    </bean>
</beans>


	
